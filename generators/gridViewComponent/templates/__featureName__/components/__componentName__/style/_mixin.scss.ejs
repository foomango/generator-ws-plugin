@mixin hide-columns-config {
  .ag-side-button:first-child {
    display: none;
  }
}

@mixin hide-editing-cell {
  .ag-cell-popup-editing > * {
    display: none;
  }
}

@mixin <%= include('../../../../../../className.ejs', { name: componentName}) -%> {
  .ag-theme-alpine .ag-cell-inline-editing {
    background: none;
    border: none;
    box-shadow: none;
  }

  .ag-theme-alpine .ag-popup-child:not(.ag-tooltip-custom) {
    box-shadow: none;
  }

  .ag-theme-alpine .ag-popup-editor {
    margin-top: 4px;
    background: none;
    border: none;
  }

  @include hide-editing-cell();
}
